#include <iostream>
#include <cstring>
 
using namespace std;
 
int main()
{
    char str1[100]="Melissa";
    char str2[100]="Cardenas";
    char str3 [100];
    int len;
    
    strcpy(str3, str1);
    cout<<"La primer palabra es: "<<str3<<endl;
    
    strcat(str1, str2);
    cout<<"Las palabras juntas son: "<<str1<<endl;
    
    len=strlen(str1);
    cout<<"Cantidad de letras: "<<len<<endl;
    
    
return 0;
}
